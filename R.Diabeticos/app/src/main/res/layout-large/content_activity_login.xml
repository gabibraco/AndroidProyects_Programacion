<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabi.rdiabeticos.ActivityLogin"
    android:background="#c21759e8"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/fragment_Perfil"
    android:weightSum="5">


    <TextView
        android:layout_width="515dp"
        android:layout_height="wrap_content"
        android:text="Introduce tu datos para entrar o registrate ."
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:textColor="#040404"
        android:textSize="25dp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNombre"
        android:layout_gravity="center_horizontal"
        android:inputType="number" />

    <TextView android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:text="@string/Nombre"
        android:background="#c21759e8"
        android:id="@+id/TextoEdadPerfil"
        android:layout_gravity="center"
        android:gravity="center" />

    <EditText
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEdad"
        android:inputType="text" />

    <TextView android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_gravity="center_horizontal"
        android:background="#c21759e8"
        android:id="@+id/TextoNombrePerfil"
        android:gravity="center" />
<!-- Definimos un Relative Layout para colocar nuestros botones-->
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.gabi.rdiabeticos.ActivityLogin"
            android:orientation="horizontal"
            android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/Entrar"
            android:id="@+id/BotonEntrar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="#908d8d"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Registrar"
            android:id="@+id/buttonRegistro"
            android:layout_gravity="right"
            android:background="#908d8d"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="116dp"
            android:layout_alignTop="@+id/BotonEntrar"
            android:layout_toStartOf="@+id/BotonEntrar" />
    </RelativeLayout>
</LinearLayout>