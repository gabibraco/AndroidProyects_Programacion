<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRecetas"
    tools:showIn="@layout/activity_fragment"
    android:background="#c50a19f7"
    android:orientation="horizontal">
    <!--Definios los dos fragments que compondran nuestra ActivityRecetas-->
    <!--
    Este primer fragment sera el fragment estatico y contendra nuestra
     imagen y el listView
    -->
    <fragment
        android:name="com.example.gabi.rdiabeticos.FragmentList"
        android:id="@+id/list_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        tools:layout="@layout/fragment_list" />
    <!--Este Fragment contendra el textview sera un fragment dinamco-->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>




