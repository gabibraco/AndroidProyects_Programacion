<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gabi.actv_5d_accdproviders.MainActivity"
    tools:showIn="@layout/activity_main">

    <ListView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/listView"
        android:background="#474747"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ListView"
        android:id="@+id/textView"
        android:layout_above="@+id/listView"
        android:layout_alignParentStart="true"
        android:gravity="fill_vertical" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar"
        android:id="@+id/BtnConsultar"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/listView"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignTop="@+id/textView" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="INSERTAR DATOS"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:width="1dp"
        android:id="@+id/Edit_Id"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/EditTitulo" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:width="1dp"
        android:id="@+id/EditTitulo"
        android:layout_above="@+id/BtnInsertar"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="41dp"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ID"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/Edit_Id"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TITULO"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/EditTitulo"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSERTAR"
        android:id="@+id/BtnInsertar"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView" />

</RelativeLayout>
